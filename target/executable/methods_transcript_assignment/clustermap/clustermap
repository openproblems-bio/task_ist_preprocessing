  ViashError "Input file '$VIASH_PAR_INPUT_SCRNASEQ' does not exist."
  exit 1
fi

# check whether parameters values are of the right type
if [[ -n "$VIASH_PAR_WINDOW_SIZE" ]]; then
  if ! [[ "$VIASH_PAR_WINDOW_SIZE" =~ ^[-+]?[0-9]+$ ]]; then
    ViashError 'window_size' has to be an integer. Use "--help" to get more information on the parameters.
    exit 1
  fi
fi
if [[ -n "$VIASH_PAR_USE_DAPI" ]]; then
  if ! [[ "$VIASH_PAR_USE_DAPI" =~ ^(true|True|TRUE|false|False|FALSE|yes|Yes|YES|no|No|NO)$ ]]; then
    ViashError 'use_dapi' has to be a boolean. Use "--help" to get more information on the parameters.
    exit 1
  fi
fi
if [[ -n "$VIASH_PAR_XY_RADIUS" ]]; then
  if ! [[ "$VIASH_PAR_XY_RADIUS" =~ ^[-+]?[0-9]+$ ]]; then
    ViashError 'xy_radius' has to be an integer. Use "--help" to get more information on the parameters.
    exit 1
  fi
